<%= form_with model: @feedback, local: true do |form| %>
  <% render 'shared/errors', resource: @feedback %>

  <div class="form-group">

    <p>
      <%= form.label :message, t('.feedback') %><br>
      <%= form.text_area :message, rows: 10, cols: 60 %>
    </p>

    <p>
      <%= form.submit t('.submit'), class: "btn btn-primary" %>
    </p>
<% end %>
</div>
