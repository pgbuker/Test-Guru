
<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h1><%= t('tests.index.header') %></h1></div>

    <div class="col-12"><%= link_to t('.new_test'), new_admin_test_path %>
                        <%= link_to t('.gists'), admin_gists_path %>

    <%= render 'shared/errors', resource: @test %>

      <table class="table table-striped">
        <thead>
        <tr>
          <th class="sort-by-title pointer"><%= t('.title')%>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level')%></th>
          <th><%= t('.author')%></th>
          <th colspan="2" ><%= t('.category')%></th>
          <th>  <%= t('.quest_count')%></th>

          <th  colspan="3" bgcolor="#FBF0DB"><%= t('.actions')%></th>
          <th><%= t('.publish') %></th>
        </tr>
        </thead>
        <tbody>
        <%= render @tests %>
        </tbody>
      </table>
    </div>  
  </div>
</div>
