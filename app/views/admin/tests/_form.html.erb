<%= form_with model: [:admin, @test]  do |form| %>
<%= render 'shared/errors', resource: @test %>

  <div class="form-group">
    <p>
        <%= form.label :title %>
        <%= form.text_field :title, id: :test_title %>
      </p>
    <p>

    <p>
      <%= form.label :level %><br>
      <%= form.number_field :level, id: :test_level %>
    </p>

    <p>
      <%= form.label :category_id %><br>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "custom-select" %>
    </p>

    <p>
      <%= form.label :publish, class: "form-check-label" %>
      <%= form.check_box :publish, class: "form-check-input" %>
    </p>

    <div class="ms-3">
      <p class="fw-bolder"><%= t('.time_limit') %></p>
      <%= form.number_field :time_limit, class: 'form-control' %> 
    </div>


      <input id='time_limit' type="range" min="1" max="100" step="1" />
      <p>Value: <output id='value'></output></p>

    <p><%= form.submit class: "btn btn-primary" %></p>



<% end %>
</div>

